/* pages/profile/profile.wxss */
.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 280rpx;
  border-bottom: 2rpx solid #ccc;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-left: 40rpx;
 
}

.history{
	display: flex;
	justify-content: space-between;
	margin-top: 80rpx;
}

.history-text{
	margin-left: 20rpx;
}

.history-icon{
	margin-right: 20rpx;
}
